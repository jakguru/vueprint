{
    "watch": [
        "src/**/*",
        "types/**/*",
        ".env",
        "build.config.ts",
        "package.json"
    ],
    "ext": "ts,json,env,scss",
    "ignore": [
        "node_modules",
        "dist",
        "docs",
        "tests"
    ],
    "exec": "npx unbuild --sourcemap && npx jiti bin/updateDistributedPackageJson.ts"
}