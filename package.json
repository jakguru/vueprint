{
  "name": "@jakguru/vueprint",
  "version": "0.1.0",
  "description": "Groundwork Libraries and Plugins for use in Vue3 based Projects",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Jak Guru <jak@jak.guru>",
  "license": "MIT",
  "scripts": {
    "watch": "nodemon",
    "build": "rm -rf dist && npx rollup -c",
    "build:watch": "rm -rf dist && npx rollup -c -w",
    "type-check": "npx tsc --noEmit",
    "lint": "eslint . --ext=.ts,.mjs",
    "format": "eslint . --ext=.ts,.mjs --fix"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "adonis-preset-ts": "^2.1.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^5.0.0",
    "less": "^4.2.0",
    "node-sass": "^9.0.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.0.0",
    "rollup": "^4.9.1",
    "rollup-plugin-styles": "^4.0.0",
    "stylus": "^0.63.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "parserOptions": {
      "parser": {
        "js": "espree",
        "mjs": "espree",
        "ts": "@typescript-eslint/parser"
      },
      "sourceType": "module",
      "extraFileExtensions": [
        ".js",
        ".mjs"
      ],
      "warnOnUnsupportedTypeScriptVersion": false
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "dist",
    "node_modules",
    "*.tmp.*",
    "*.tmp"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "dependencies": {
    "@jakguru/milicron": "^1.0.0",
    "@mdi/font": "^7.4.47",
    "axios": "^1.6.7",
    "broadcast-channel": "^7.0.0",
    "dot-object": "^2.1.4",
    "firebase": "^10.8.1",
    "joi": "^17.12.2",
    "lodash.merge": "^4.6.2",
    "luxon": "^3.4.4",
    "push.js": "^1.0.12",
    "secure-ls": "^1.2.6",
    "sweetalert2": "^11.10.6",
    "tiny-emitter": "^2.1.0",
    "vue": "^3.4.21",
    "vue-i18n": "^9.10.1",
    "vuetify": "^3.5.7"
  }
}
